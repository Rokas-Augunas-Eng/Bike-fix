<div class="card-show">
  <div class="container">
    <div class="row py-4">
      <div class="col">
        <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
        <ul class="list-unstyled">
          <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
          <li><strong>service</strong> <%= @order.service.sku %> [<%= @order.service_sku %>]</li>
          <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
          </li>
        </ul>
        <p>Estimated delivery in <strong>2 business days</strong></p>
      </div>
    </div>
  </div>
</div>


<div class="confirmation-page">

<div class="container">
  <h2 class="payment-margin">Order Confirmation</h2>
    <div class="booking-timer" style="background-color: white">
      <div class="d-flex justify-content-between" >
        <p><strong>Estimated Arrival</strong></p>
        <%= (@booking.created_at+30*60).strftime("%H:%M") %>
      </div>

      <div class="progress mx-auto ">
        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25 minutes</div>
      </div>
      <p><i>Your order has been confirmed</i></p>
    </div>

    <div class="display-summary toggle-container">
      <div class="heading-wrapper"><p class="toggle-heading"><strong>Your Order</strong></p>
        <i class="fas fa-check-circle toggle-trigger"></i>
      </div>
      
      <div class="order_summary toggle-content">
        <%= @booking.service.repair_name %>
        <strong>Â£<%= @booking.service.cost %></strong>
      </div>
    </div>


    <div class="display-summary toggle-container">
      <div class="heading-wrapper"><p class="toggle-heading-mechanic"><strong>Your Mechanic</strong></p>
        <i class="fas fa-wrench toggle-trigger-mechanic"></i>
      </div>
        
      <div class="order_summary toggle-content">
        <p><%#= @booking.mechanic.company_name %></p>
      </div>
    </div>



    <div>
      <p><strong>Mechanic Location</strong></p>
    
     <div class="map_confirmation", class="flex-container" id="map"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>



