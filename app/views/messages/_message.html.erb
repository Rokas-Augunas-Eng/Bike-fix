<% if current_user.mechanic %>

  <div class="container_message" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.first_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>

<% else %>

  <div class="container_message_user" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.first_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>

<% end %>


