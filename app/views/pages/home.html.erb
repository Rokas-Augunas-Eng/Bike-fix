
<h1 class="title"> Bike issue? </h1>

<div class="searchbar">
  <%= form_tag users_path, method: "GET" do %>
  <%= text_field_tag :search_by_service, params[:search_by_service],
  placeholder: "Tyre Puncture...",
  class: "searchbox"%>
  <%= submit_tag "Search",
  class: "search_button" %>
  <% end %>
</div>

<div class="main">
 <h4 class="near_me">Near me</h4>
  <ul class="cards">

    <% @mechanics[0..3].each do |mechanic| %>
    <li class="cards_item">
      <div class="card">
        <div class="card_image"><img src=""></div>
        <div class="card_content">
          <h2 class="card_title"><%= mechanic.company_name %></h2>
          <p class="card_text"><i class="fas fa-map-marker-alt"></i> <%= mechanic.location %></p>
          <p class="card_text"><i class="fas fa-bicycle"></i>  </p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>
