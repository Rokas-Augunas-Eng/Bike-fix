<div class="main">
  <div class="cards">
    <div class="cards_item">
      <div class="card_show">
        <div class="card_image">
          <img src="https://www.guildford-dragon.com/wp-content/uploads/2020/08/Bike-Bros-logo.png">
        </div>
        <div class="card_content_show">
            
            <h2 class="card_title"><%= @user.company_name %> </h2> 
            <p class="card_text"><i class="fas fa-map-marker-alt"></i> <%= @user.location %></p>
            
            <% @user.services.each do |service| %>
              <p class="card_text"><%= icon('fas', 'bicycle') %> <%= service.repair_name %> <%= icon('fas', 'money-bill-wave') %> <%= humanized_money_with_symbol(service.price) %></p>

            <% end %>

             <%= icon('fas', 'star', style: 'color: white')  * @user.services.first.average_rating.to_i %><%= icon('far', 'star', style: 'color: white') * (5 - @user.services.first.average_rating.to_i) %>

        </div>
      </div>
    </div>
    <%= link_to "Book Now", new_user_booking_path(@user), class: "btn_show" %>
  </div>

    <div class="card_image">
      <div id="map"
        style="width:100%; height: 400px;"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV'MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>



